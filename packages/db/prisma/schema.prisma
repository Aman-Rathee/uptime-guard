generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String
  password String
  website  Website[]
}

model Website {
  id        String        @id @default(uuid())
  url       String
  timeAdded DateTime      @default(now())
  user_id   String
  user      User          @relation(fields: [user_id], references: [id])
}

model Region {
  id    String        @id @default(uuid())
  name  String
}

enum WebsiteStatus {
  Up
  Down
  Unknown
}
  